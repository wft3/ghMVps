{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "SassCompiler": {
    "Source": "Styles",
    "Target": "wwwroot/css",
    "Arguments": "--style=compressed",
    "GenerateScopedCss": true,
    "ScopedCssFolders": [ "Views", "Pages", "Shared", "Components", "UI", "Widgets", "SvgResults", "Svgs" ],
    "IncludePaths": [],

    "Compilations": [
      // Specify a specific file source/target in addition to the "Styles" -> "wwwroot/css" Source/Target above
      {
        "Source": "wwwroot/styles/app.scss",
        "Target": "wwwroot/css/app.min.css"
      }
      // Or an extra directory to a different target directory
      //{
      //  "Source": "wwwroot/styles",
      //  "Target": "wwwroot/css"
      //}
    ],

    // You can override specific options based on the build configuration
    "Configurations": {
      "Debug": { // These options apply only to Debug builds
        "Arguments": "--style=expanded"
      }
    }
  },
  "MvpsPlusApiUrl": "https://localhost:7280/"
}
